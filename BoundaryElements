//				matrix2[j][col-1] = matrix[j][col-1];
//			}
//			for(int j=0;j<col;j++) {
//				matrix2[row-1][j] = matrix[row-1][j];
//			}
//			for(int j=0;j<row;j++) {
//				matrix2[j][0] = matrix[j][0];
//			}
//			for(int i=0;i<row;i++) {
//				for(int j=0;j<col;j++) {
//					if(matrix2[i][j]==0) {
//						System.out.print(" ");
//					}
//					else {
//						System.out.print(matrix2[i][j]);
//					}
//					
//				}
//				System.out.println();
//			}
				
	
	}
}

package GFG;
import java.util.Scanner;
public class Q18 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the value of Principal,Time,Rate respectively: ");
		int p = sc.nextInt();
		int t = sc.nextInt();
		int r = sc.nextInt();
		int si = (p*t*r)/100 ;
		System.out.println(si);
		sc.close();
	}
}

package GFG;
import java.util.Scanner;
public class Q27 {
	public static void DisplayTriangle(int num) {
		int i,j;
		for(i=0;i<num;i++) {
			for(j=0;j<num-i;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the value of num: ");
		int num = sc.nextInt();
		DisplayTriangle(num);
		sc.close();
	}
}

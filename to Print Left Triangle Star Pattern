package GFG;

import java.util.Scanner;

public class Q22 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the value of n: ");
		int n = sc.nextInt();
		int i,j,k;
		for(i=0;i<n;i++) {
			for(j=0;j<(n-i-1);j++) {
				System.out.print(" ");
			}
			for(k=n-i-1;k<n;k++) {
				System.out.print("*");
			}
			System.out.println();
		}
		sc.close();
	}
}
